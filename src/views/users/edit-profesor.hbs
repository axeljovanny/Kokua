<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <form action="/profesores/edit/{{profesor._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="row">
                        <div class="col s12">
                            <div class="row ">
                                <div class="input-field col s6">
                                    <input id="nomPro" name="nomPro" type="text" class="validate white-text" value="{{profesor.nomPro}}">
                                    <label for="nomPro" class="white-text">Nombre</label>
                                </div>
                                <div class="input-field col s6">
                                    <input id="apePro" name="apePro" type="text" class="validate white-text" value="{{profesor.apePro}}">
                                    <label for="apePro" class="white-text">Apellidos</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s6">
                                    <input id="emaPro" name="emaPro" type="email" class="validate white-text" value="{{profesor.emaPro}}">
                                    <label for="emaPro" class="white-text">Correo Electronico (Institucional)</label>
                                </div>
                                <div class="input-field col s6">
                                    <input id="cedProPro" name="cedProPro" type="number" class="validate white-text" value="{{profesor.cedProPro}}">
                                    <label for="cedProPro" class="white-text">Cedula Profecional</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="pasPro" name="pasPro" type="password" class="validate white-text" value="{{profesor.pasPro}}">
                                    <label for="pasPro" class="white-text">Password</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="waves-effect waves-light btn" type="submit">Save</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>